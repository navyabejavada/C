#include<stdio.h>
struct student
{
    char name[50];
    int marks[5];
    float average;
};
void main()
{
struct student s[3];
for(int i=0;i>3;i++)
{
    printf("\n enter information %d",i+1);
    printf("enter name:");
    scanf("%s",s[i].name);
    printf("\n enter five marks of students %d");
    int sum=0;
    for(int j=0;j<3;j++)
     {
        scanf("%d",&s[i].marks[j]);
        sum+=s[i].marks[j];
     }
s[i].average=(float)sum/5.0;
    printf("/n");
}
    int maxindex=0;
    float maxaverage=s[0].average;
    for(int i=0;i<3;i++)
    {
    if(s[i].average>maxaverage)
        {
          maxaverage=s[i].average;
          maxindex=i;
        }

    }
         printf("\n topper name is %s",s[maxindex].name);
         printf("\n average marks of topper is :%2f",s[maxindex].average);
}
